# basic stuff
alias sourcez='source ~/.zshrc'
alias bat='bat --paging=never'
alias fzf="fzf --preview 'bat --style=numbers --color=always --line-range :500 {}'"
alias fzfs=$'rg . | fzf --print0 -e | awk -F: \'{print $1}\''
alias neo='neofetch'
alias ll='ls -alhF'
alias sl='ls'
alias open='xdg-open'
alias dgpu="export __GLX_VENDOR_LIBRARY_NAME=nvidia && export __NV_PRIME_RENDER_OFFLOAD=1 &&"

# ctf aliases
alias gef='gdb -q --eval-command=init-gef'
alias ex='chmod +x '
alias p='ipython'
alias pwninit='pwninit --template-path ~/.config/pwn-template.py --template-bin-name e'
alias scripts='code /home/anger/Tools/ctf-scripts'
alias ghidra='~/Tools/ghidra_PUBLIC/ghidraRun'

# ssh into pwn.college challenge
alias sshpwn='ssh hacker@dojo.pwn.college'


# dir transverse
alias tools='cd ~/Tools/'
alias play='cd ~/Workspace/Playground/'
alias ctf='cd ~/Workspace/CTF'
alias dev='cd ~/Workspace/Development/'
alias vr='cd ~/Workspace/VR'
alias work='cd ~/Workspace/'
alias wo='cd ~/Workspace/'

#copies the piped input onto the clipboard                                                                          
alias copy='xclip -selection c'
alias paste='xclip -selection clipboard -o'

